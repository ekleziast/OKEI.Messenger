<Application x:Class="MessengerWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MessengerWPF"
             StartupUri="View\MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles\Fonts.xaml"/>
                <ResourceDictionary Source="Styles\Colors.xaml"/>
                
                <ResourceDictionary Source="Styles\Buttons.xaml"/>
                <ResourceDictionary Source="Styles\Inputs.xaml"/>
                <ResourceDictionary Source="Styles\Navigations.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:DateTimeConverter x:Key="DateTimeConverterXAML"/>
            <local:MultiValuesConverter x:Key="MultiValuesConverterXAML"/>
            <local:MessageConverter x:Key="MessageConverterXAML"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
